extends layout
block extra-stylings
    link(rel='stylesheet', href='/stylesheets/parts.css')

block content 
    div
        ul.types
            li
                a(href='/shop/parts/') All
            each t in types
                if t.name === parts[0].type.name
                    li 
                        a(class='selected' href=t.all_parts_url)= t.name
                else
                    li
                        a(href=t.all_parts_url)= t.name 
    div.parts-list
        each part in parts
            div.part
                img(src='https://images.unsplash.com/photo-1592664474496-8f2c35acd655?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTd8fGNwdXxlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60')
                a(href=part.url class="part-name") #{part.name}
                p #{part.manufacturer.name}
                p $#{part.price.toFixed(2)}
